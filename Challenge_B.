live_loop :my_snare  do
  16.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end

live_loop :my_kick  do
  24.times do
    sample :drum_heavy_kick, amp: 2
    sleep 1
  end
  stop
end

live_loop :my_cymbal  do
  8.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end

live_loop :my_crash do
  3.times do
    sample :drum_splash_hard
    sleep 24
    sample :drum_splash_hard
    sleep 28
    sample :drum_splash_hard
  end
  stop
end

live_loop :my_hardcymbal do
  8.times do
    sample :drum_cymbal_hard
    sleep 24
  end
  stop
end

live_loop :my_cowbell do
  2.times do
    sample :drum_cymbal_hard
    sleep 1
  end
  stop
end
